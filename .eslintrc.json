{
    "files": ["src/**/*.ts"],
    "languageOptions": {
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "ecmaVersion": 2024,
            "sourceType": "module"
        }
    },
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "rules": {
        "no-unused-vars": "error",
        "semi": ["error", "always"],
        "indent": ["error", 4]
    }
}
